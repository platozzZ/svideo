page, .login {
  background-color: #fff;
  height: 100%;
}
.login {
  height: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
}
.login .container {
  padding: 40rpx 70rpx;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
}
.login .container .header .avatar {
  margin-top: 50rpx;
  overflow: hidden;
}
.login .container .form {
  margin-top: 80rpx;
  margin-bottom: 80rpx;
}
.login .container .form .codeBtn {
  color: #EC463B;
  padding-left: 20rpx;
}
.login .container .form .codeBtn.checked {
  color: #F3B5BB;
}
.login .container .form .codeBtn::after {
  top: calc(35rpx / 2);
  height: 70rpx;
}
.login .container .form .btn {
  color: #303133;
}
.login .container .footer {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  -webkit-box-pack: end;
  -webkit-justify-content: flex-end;
          justify-content: flex-end;
  padding-bottom: 40rpx;
}
.login .container .footer .other .other-item {
  position: relative;
}
.login .container .footer .other .other-item .getPhoneNumber {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
.login .container .footer .other .other-item .getPhoneNumber .u-btn {
  width: 100%;
  height: 100%;
  opacity: 0;
}

