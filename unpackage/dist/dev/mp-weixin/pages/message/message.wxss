.p-list .p-item {
  position: relative;
  background-color: #fff;
  padding: 30rpx 40rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: start;
  -webkit-align-items: flex-start;
          align-items: flex-start;
}
.p-list .p-item:last-child::after {
  display: none;
}
.p-list .p-item::after {
  content: ' ';
  position: absolute;
  left: 130rpx;
  top: 0;
  pointer-events: none;
  -webkit-transform-origin: 0 0;
          transform-origin: 0 0;
  width: calc(200% - 320rpx);
  height: 200%;
  -webkit-transform: scale(0.5, 0.5);
          transform: scale(0.5, 0.5);
  border-bottom: 1rpx solid #e4e7ed;
  z-index: 2;
}
.p-list .p-item .p-avatar {
  width: 80rpx;
  height: 80rpx;
  -webkit-border-radius: 50%;
          border-radius: 50%;
  overflow: hidden;
  margin-right: 20rpx;
}
.p-list .p-item .p-avatar image {
  width: 100%;
  height: 100%;
}
.p-list .p-item .p-content {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  width: calc(100vw - 160rpx);
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
}
.p-list .p-item .p-content .p-top {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.p-list .p-item .p-content .p-top .p-title {
  font-size: 32rpx;
  color: #303133;
}
.p-list .p-item .p-content .p-top .p-time {
  font-size: 24rpx;
  color: #909399;
}
.p-list .p-item .p-content .p-des {
  margin-top: 10rpx;
  font-size: 22rpx;
  color: #7F7F7F;
}
